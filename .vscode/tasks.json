    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "detail": "build ROM",
            "type": "shell",
            "command": "python3",
            "args": [
                "build.py"
            ],
            "presentation": {
                "clear": true,
                "panel": "dedicated",
            },
            "problemMatcher": [
                "$rgbdserror",
                "$rgbdslinkerror"
            ]
        },
        {
            "label": "rebuild",
            "detail": "rebuild ROM from scratch",
            "command": "python3",
            "args": [
                "build.py",
                "--rebuild"
            ],
            "presentation": {
                "clear": true,
                "panel": "dedicated",
            },
            "problemMatcher": [
                "$rgbdserror",
                "$rgbdslinkerror"
            ]
        },
        {
            "label": "clean",
            "detail": "cleans up build dir",
            "type": "shell",
            "command": "python3",
            "args": [
                "clean.py"
            ],
            "presentation": {
                "clear": true,
                "panel": "dedicated",
            },
        }
    ]
}
